use_frameworks!
platform :ios, '11.0'

target 'AMKCategories_Example' do
    # 当前工程
    pod 'AMKCategories', :path => '../'
    pod 'AMKCategories/UIKit', :path => '../'
    pod 'AMKCategories/Foundation', :path => '../'
    pod 'AMKCategories/ThirdPart', :path => '../'
    
    # 第三方
    pod 'Masonry'
    pod 'YYModel'
    pod 'YYText'
    pod 'YYCategories'
    pod 'AMKStackView'
    pod 'AFNetworking', '3.2.1'
    pod 'MBProgressHUD', :path => '../PrivatePods/MBProgressHUD'
    pod 'MJRefresh', '3.7.5'
#    pod 'MirrorKit', :path => '../PrivatePods/MirrorKit'
    pod 'Aspects', :path => '../PrivatePods/Aspects'
    pod 'FLEX'
    pod 'lottie-ios', '2.5.3'
    pod 'FDFullscreenPopGesture'
    pod 'LookinServer', :configurations => ['Debug']
end

post_install do |installer|
  installer.generated_projects.each do |project|
    project.targets.each do |target|
        target.build_configurations.each do |config|
            config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '11.0'
         end
    end
  end
end
